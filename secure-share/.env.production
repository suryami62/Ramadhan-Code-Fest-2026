# ==========================================
# SecureShare Production Environment
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git!

# ==========================================
# Database Configuration
# ==========================================
# SQLite database path (inside Docker container)
DATABASE_URL="file:/app/db/production.db"

# ==========================================
# Cleanup Service Secret
# ==========================================
# Generate with: openssl rand -base64 32
# This secret is used to authenticate cleanup API requests
CLEANUP_SECRET="your-generated-secret-here"

# ==========================================
# Cloudflare Turnstile (Optional but Recommended)
# ==========================================
# Get your keys from: https://dash.cloudflare.com/?to=/:account/turnstile
# Site Key (public, exposed to frontend)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""

# Secret Key (private, used for server-side verification)
TURNSTILE_SECRET_KEY=""

# ==========================================
# Application Configuration
# ==========================================
# Environment
NODE_ENV="production"

# Port (default 3000, usually no need to change)
PORT=3000

# ==========================================
# Domain Configuration
# ==========================================
# Your domain (without protocol)
# Example: share.yourdomain.com
NEXT_PUBLIC_APP_URL="https://share.yourdomain.com"
